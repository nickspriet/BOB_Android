<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imgProfile"
        android:layout_width="fill_parent"
        android:layout_height="120dp" />

    <LinearLayout
        android:id="@+id/llCardViewProfileInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgProfile"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/cardViewProfileInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/cardColorBackground">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/imgProfile"
                android:padding="8dp">

                <TextView
                    android:id="@+id/lblName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:text="Name"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvProfileName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="100dp"
                    android:layout_toEndOf="@+id/lblName"
                    android:padding="4dp"
                    android:text="Nick Spriet" />

                <TextView
                    android:id="@+id/lblPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lblName"
                    android:padding="4dp"
                    android:text="Phone"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvProfilePhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/tvProfileName"
                    android:layout_below="@+id/tvProfileName"
                    android:padding="4dp"
                    android:text="+32 (0) 472 01 23 45" />

                <TextView
                    android:id="@+id/lblEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lblPhone"
                    android:padding="4dp"
                    android:text="E-mail"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvProfileEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/tvProfilePhone"
                    android:layout_below="@+id/tvProfilePhone"
                    android:padding="4dp"
                    android:text="john.doe@gmail.com" />

                <TextView
                    android:id="@+id/lblAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lblEmail"
                    android:padding="4dp"
                    android:text="Address"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvProfileAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/tvProfileEmail"
                    android:layout_below="@+id/tvProfileEmail"
                    android:padding="4dp"
                    android:text="Graaf Karel de Goedelaan 5\n8500 Kortrijk\nBelgium" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llCardViewAboutMe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/llCardViewProfileInfo"
        android:layout_marginTop="16dp"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/cardViewAboutMe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/cardColorBackground">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/imgProfile"
                android:padding="8dp">

                <TextView
                    android:id="@+id/lblAboutMe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:text="About me"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvProfileAboutMe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lblAboutMe"
                    android:padding="4dp"
                    android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. " />

            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/llCardViewAboutMe"
        android:layout_marginTop="16dp"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/cardViewCars"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/cardColorBackground">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/imgProfile"
                android:padding="8dp">

                <TextView
                    android:id="@+id/lblCars"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:text="Cars"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imgCar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lblCars"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/car" />


                <TextView
                    android:id="@+id/tvProfileCarType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/imgCar"
                    android:layout_marginStart="100dp"
                    android:padding="4dp"
                    android:text="Seat Ibiza" />

                <TextView
                    android:id="@+id/tvProfileCarLicense"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="100dp"
                    android:layout_below="@id/tvProfileCarType"
                    android:padding="4dp"
                    android:text="1-ABC-123" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/fab_margin"
        android:src="@android:drawable/ic_menu_edit" />

</RelativeLayout>
