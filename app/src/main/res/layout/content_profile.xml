<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imgCover"
        android:layout_width="fill_parent"
        android:layout_height="120dp" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgProfile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/imgCover"
        android:layout_marginTop="-30dp"
        android:src="@drawable/ic_account"
        android:layout_gravity="center"
        tools:civ_border_width="2dp"
        android:elevation="4dp"
        tools:civ_border_color="#FFEFEFEF"/>

    <LinearLayout
        android:layout_below="@id/imgCover"
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:id="@+id/cardViewProfileInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/cardColorBackground">

            <LinearLayout
                android:paddingTop="30dp"
                android:paddingStart="@dimen/card_inner_margin_horizontal"
                android:paddingEnd="@dimen/card_inner_margin_horizontal"
                android:paddingBottom="@dimen/card_inner_margin_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvProfileName"
                    style="@style/Header.Text.Title.Dark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="Nick Spriet" />

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardViewAboutMe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/card_leading"
            android:background="@color/cardColorBackground">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/card_inner_margin_vertical"
                android:paddingStart="@dimen/card_inner_margin_horizontal"
                android:paddingEnd="@dimen/card_inner_margin_horizontal"
                android:paddingBottom="@dimen/card_inner_margin_vertical"
                >

                <TextView
                    android:id="@+id/lblAboutMe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:text="About me"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvProfileAboutMe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lblAboutMe"
                    android:padding="4dp"
                    android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. " />

            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardViewCars"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/card_leading"
            android:background="@color/cardColorBackground">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/card_inner_margin_vertical"
                android:paddingStart="@dimen/card_inner_margin_horizontal"
                android:paddingEnd="@dimen/card_inner_margin_horizontal"
                android:paddingBottom="@dimen/card_inner_margin_vertical">

                <TextView
                    android:id="@+id/lblCars"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:text="Cars"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imgCar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lblCars"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/ic_car" />


                <TextView
                    android:id="@+id/tvProfileCarType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/imgCar"
                    android:layout_marginStart="100dp"
                    android:padding="4dp"
                    android:text="Seat Ibiza" />

                <TextView
                    android:id="@+id/tvProfileCarLicense"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="100dp"
                    android:layout_below="@id/tvProfileCarType"
                    android:padding="4dp"
                    android:text="1-ABC-123" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>



    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/fab_margin"
        android:src="@android:drawable/ic_menu_edit" />

</RelativeLayout>