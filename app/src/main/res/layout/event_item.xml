<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/card_vertical_margin"
        android:layout_marginEnd="@dimen/card_horizontal_margin"
        android:layout_marginStart="@dimen/card_horizontal_margin"
        android:layout_marginTop="@dimen/card_vertical_margin"
        android:background="@color/cardColorBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/llEvent"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvEventWeekDay"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="Tue"
                    android:textAllCaps="true"
                    android:textSize="24dp" />

                <TextView
                    android:id="@+id/tvEventDay"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:gravity="center"
                    android:text="20"
                    android:textSize="36dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvEvent"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="Sep"
                    android:textAllCaps="true"
                    android:textSize="24dp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/card_inner_margin">

                <TextView
                    android:id="@+id/tvEventName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:text="Student Welcome Concert"
                    android:textSize="20dp" />

                <ImageView
                    android:id="@+id/iconEventAddress"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/tvEventName"
                    android:layout_marginRight="4dp"
                    android:src="@drawable/ic_location_on_black_24dp" />

                <TextView
                    android:id="@+id/tvEventAddress"
                    style="@style/Card.Text.Meta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvEventName"
                    android:layout_toEndOf="@+id/iconEventAddress"
                    android:text="Street, 0000 City" />

                <ImageView
                    android:id="@+id/iconEventDate"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginRight="4dp"
                    android:src="@drawable/ic_access_time_black_24dp"
                    android:layout_below="@+id/tvEventAddress"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:id="@+id/tvEventDate"
                    style="@style/Card.Text.Meta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvEventAddress"
                    android:layout_toEndOf="@+id/iconEventDate"
                    android:text="Oct 20 at 9:00pm to Oct 21 at 5:00am" />

                <View
                    android:id="@+id/separator"
                    style="@style/Separator.Horizontal"
                    android:layout_below="@id/tvEventDate" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/separator"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvEventGoing"
                        style="@style/Card.Text.Button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.33"
                        android:text="Going (21)" />

                    <TextView
                        android:id="@+id/tvEventMaybe"
                        style="@style/Card.Text.Button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.33"
                        android:text="Maybe (7)" />

                    <TextView
                        android:id="@+id/tvEventNotGoing"
                        style="@style/Card.Text.Button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.33"
                        android:text="Not going (11)" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>