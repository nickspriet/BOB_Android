<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout style="@style/Card.Wrapper.Details">

            <TextView
                android:id="@+id/tvEventDetailsFriendsAndGuests"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="27 are going (including 7 Bobs)" />

            <View style="@style/Separator.Horizontal" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="10dp"
                    android:src="@mipmap/ic_launcher" />

                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="You are a BOB!">

                </TextView>

            </LinearLayout>


            <View style="@style/Separator.Horizontal" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Going (52/140)" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Interested (10/25)" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Not going (17/120)" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout style="@style/Card.Wrapper.Details">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_vertical">

                <TextView
                    style="@style/Card.Text.Meta.Label.Padded"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time"/>

                <TextView
                    android:id="@+id/tvEventDetailsTotalTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Oct 20 at 9:00pm to Oct 21 at 5:00am" />
            </LinearLayout>

            <View style="@style/Separator.Horizontal" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    style="@style/Card.Text.Meta.Label.Padded"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Location"/>

                <TextView
                    android:id="@+id/tvEventDetailsAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Street, 0000 City, Country" />

            </LinearLayout>

            <View style="@style/Separator.Horizontal" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvEventDetailsOrganisator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="You are invited by Ilias Ismanalijev" />


            </LinearLayout>
        </LinearLayout>

        <LinearLayout style="@style/Card.Wrapper.Details">

            <TextView
                style="@style/Card.Text.Meta.Label.Padded"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description" />

            <TextView
                android:id="@+id/tvProfileAboutMe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/loremipsum" />
        </LinearLayout>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>