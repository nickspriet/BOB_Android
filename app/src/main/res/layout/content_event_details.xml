<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_height="@dimen/nav_header_height"
            android:layout_width="match_parent">

            <ImageView
                android:id="@+id/imgEventDetails"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <View
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/header_background">
            </View>

            <TextView
                android:id="@+id/tvEventDetailsName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:padding="@dimen/nav_header_vertical_spacing"
                style="@style/Header.Text.Title"
                android:text="Name of the event" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="12dp"
                android:layout_marginTop="100dp"
                android:src="@mipmap/ic_launcher" />

        </RelativeLayout>

        <LinearLayout style="@style/Card.Wrapper.Details">
            <TextView
                android:id="@+id/tvEventDetailsFriendsAndGuests"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="27 are going (including 7 Bobs)" />

            <View style="@style/Separator.Horizontal" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Going (52/140)" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Interested (10/25)" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Not going (17/120)" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout style="@style/Card.Wrapper.Details">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time"/>

                <TextView
                    android:id="@+id/tvEventDetailsTotalTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"
                    android:layout_toEndOf="@+id/icClock"
                    android:text="Oct 20 at 9:00pm to Oct 21 at 5:00am" />
            </LinearLayout>

            <View style="@style/Separator.Horizontal" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    style="@style/Card.Text.Meta.Label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Location"/>

                <TextView
                    android:id="@+id/tvEventDetailsAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_toEndOf="@+id/icMapMarker"
                    android:text="Street, 0000 City, Country" />

            </LinearLayout>

            <View style="@style/Separator.Horizontal" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvEventDetailsOrganisator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="You are invited by Ilias Ismanalijev" />


            </LinearLayout>
        </LinearLayout>

        <LinearLayout style="@style/Card.Wrapper.Details">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:text="Description"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvProfileAboutMe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:text="@string/loremipsum" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>